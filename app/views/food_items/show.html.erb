<div class="page-header">
  <h3><%= @food_item.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @food_item.name %></dd>

      <dt>Current amount</dt>
      <dd><%= @food_item.current_amount %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @food_item.image %>" width="120"></dd>

      <dt>Reorder amount</dt>
      <dd><%= @food_item.reorder_amount %></dd>

      <dt>Food category</dt>
      <dd><%= @food_item.food_category.name %></dd>

      <dt>Amount per order</dt>
      <dd><%= @food_item.amount_per_order %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/food_items" class="btn btn-primary">
        Back
      </a>
      <% if @food_item.user == current_user %>
      <a href="/food_items/<%= @food_item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_food_item/<%= @food_item.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% end %>

    </div>
  </div>
</div>
